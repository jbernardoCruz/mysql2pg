// ═══════════════════════════════════════════════════════════════
// Prisma Schema — PostgreSQL (Migrated from MySQL)
// ═══════════════════════════════════════════════════════════════
//
// This is the INITIAL schema file. After running the migration
// with pgloader, run `npx prisma db pull` to generate the
// actual schema from the migrated database.
//
// This file will be OVERWRITTEN by `prisma db pull`.
// ═══════════════════════════════════════════════════════════════

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

